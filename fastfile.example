default_platform(:android)

platform :android do
  desc "We:Design:App"
    lane :deploy do
        gradle(
          task: "assemble",
          build_type: "Release"
        )
        firebase_app_distribution(
            service_credentials_file: "firebase_credentials.json",
            app: ENV['VUE_APP_FIREBASE_ANDROID_APP_ID'],
            testers: "example",
            release_notes: "example"
        )
    end
end

